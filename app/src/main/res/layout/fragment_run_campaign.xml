<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RunCampaignFragment"
    android:id="@+id/rl_run_campaign"
    android:background="@drawable/mapsimage">

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progress_bar_run_campaign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
    </ProgressBar>

    <FrameLayout
        android:id="@+id/circle_layout_run_campaign"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="70dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/circle_shape">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="70dp"
            android:text="@string/current_trip"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/tv_payment_run_campaign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="130dp"
            tools:text="$12.80"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="48sp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/tv_distance_driven_run_campaign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="230dp"
            tools:text="80 KM"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold">
        </TextView>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_run_campaign_bottom_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/circle_layout_run_campaign">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="100dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/you_can_turn_off_or_background">
        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_end_trip_run_campaign"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_background_red"
            android:text="@string/end_trip"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp">
        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

</RelativeLayout>



