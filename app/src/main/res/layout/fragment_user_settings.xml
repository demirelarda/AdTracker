<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:src="@drawable/account_icon"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/light_gray" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="12dp"
                tools:text="Test User"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="40dp">

                <TextView
                    android:id="@+id/tv_btn_edit_personal_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_personal_information"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_secondary"
                    android:focusable="true"
                    android:drawablePadding="8dp"
                    android:padding="16dp"
                    android:background="@drawable/tv_background_shape"
                    app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
                    app:drawableStartCompat="@drawable/account_icon"
                    app:drawableTint="@color/app_blue" />

                <TextView
                    android:id="@+id/tv_btn_edit_address_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="@string/edit_address_information"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_secondary"
                    android:focusable="true"
                    android:drawablePadding="8dp"
                    android:padding="16dp"
                    android:background="@drawable/tv_background_shape"
                    app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
                    app:drawableStartCompat="@drawable/location_icon"
                    app:drawableTint="@color/app_blue" />

                <TextView
                    android:id="@+id/tv_btn_edit_driving_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_car_driving_info"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_secondary"
                    android:layout_marginTop="22dp"
                    android:focusable="true"
                    android:drawablePadding="8dp"
                    android:padding="16dp"
                    android:background="@drawable/tv_background_shape"
                    app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
                    app:drawableStartCompat="@drawable/extra_details_icon"
                    app:drawableTint="@color/app_blue" />

                <TextView
                    android:id="@+id/tv_btn_campaign_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/campaign_history"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="22dp"
                    android:textColor="@color/gray_secondary"
                    android:focusable="true"
                    android:drawablePadding="8dp"
                    android:padding="16dp"
                    android:background="@drawable/tv_background_shape"
                    app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
                    app:drawableStartCompat="@drawable/extra_details_icon"
                    app:drawableTint="@color/app_blue" />

                <TextView
                    android:id="@+id/tv_btn_contact_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_us"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="22dp"
                    android:textColor="@color/gray_secondary"
                    android:focusable="true"
                    android:drawablePadding="8dp"
                    android:padding="16dp"
                    android:background="@drawable/tv_background_shape"
                    app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
                    app:drawableStartCompat="@drawable/email_icon"
                    app:drawableTint="@color/app_blue" />

                <TextView
                    android:id="@+id/tv_btn_get_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/receive_payment"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_secondary"
                    android:layout_marginTop="22dp"
                    android:focusable="true"
                    android:drawablePadding="8dp"
                    android:padding="16dp"
                    android:background="@drawable/tv_background_shape"
                    app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
                    app:drawableStartCompat="@drawable/baseline_attach_money_24"
                    app:drawableTint="@color/app_blue" />

                <TextView
                    android:id="@+id/tv_btn_sign_out"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_out"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_secondary"
                    android:layout_marginTop="22dp"
                    android:focusable="true"
                    android:drawablePadding="8dp"
                    android:padding="16dp"
                    android:background="@drawable/tv_background_shape"
                    app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
                    app:drawableStartCompat="@drawable/sign_out_icon"
                    app:drawableTint="@color/app_blue" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</ScrollView>
